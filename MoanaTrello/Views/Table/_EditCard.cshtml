@model MoanaTrello.Models.Helpers.Card
@using MoanaTrello.Models.Helpers

@{ 
    IEnumerable<User> users = (List<User>)ViewData["users"];
}

<div class="modal-header">
    @Html.HiddenFor(m=> m.Id)
    @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control" } })
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <p>Leírás:<br />@Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "form-control" } })</p>
    <p>Létrehozva:<br />@Model.CreatedAt</p>
    <p>Módosítva:<br />@Model.ModifiedAt</p>
    <p>Létrehozta:<br />@Model.OwnerId</p>
    <p>Hozzárendelve:<br />@Html.DropDownListFor(m => m.AsigneeId, new SelectList(users, "Id", "Email"), new { htmlAttributes = new { @class = "form-control" } })</p>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary" onclick="update('@Model.Id')">Mentés</button>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Mégse</button>
</div>
